PROJECT_NAME     := openthread_lib_libmbedcrypto_software
TARGETS          := libmbedcrypto_software
OUTPUT_DIRECTORY := _build

SDK_ROOT := ../../../../../../..
PROJ_DIR := ../../../..


# Source files common to all targets
SRC_FILES += \
